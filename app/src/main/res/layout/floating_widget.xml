<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/main_floating_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/floating_icon_background"
        android:contentDescription="Floating Icon" />

    <LinearLayout
        android:id="@+id/menu_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_toEndOf="@id/main_floating_icon"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/lock_button_in_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:background="@drawable/start"
            android:padding="10dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Lock Screen" />

        <ImageView
            android:id="@+id/exit_button_in_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/stop"
            android:padding="10dp"

            android:contentDescription="Exit Service" />
    </LinearLayout>
</RelativeLayout>